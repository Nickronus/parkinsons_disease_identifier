<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <!-- Внимание заголовок -->
    <TextView
        android:id="@+id/tvAttention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_attention"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#D32F2F"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp" />

    <!-- Основной текст предупреждения -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvWarningText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#333333"
            android:padding="8dp" />
    </ScrollView>

    <!-- Кнопка ХОРОШО - размер и отступ как у кнопки "О программе" -->
    <Button
        android:id="@+id/btnOkay"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="@string/welcome_btn_ok"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"
        android:elevation="4dp"
        android:stateListAnimator="@null" />

</LinearLayout>