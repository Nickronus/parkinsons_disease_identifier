<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Иконка приложения -->
    <ImageView
        android:id="@+id/iconMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_inv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Кнопка "Анализ речи" - по центру экрана, большая, синяя -->

    <!-- Кнопка "Анализ фонации гласных" - по центру экрана, под первой, большая, синяя -->

    <!-- Кнопка "О программе" - снизу, серая -->

    <Button
        android:id="@+id/btnSpeechAnalysis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#2196F3"
        android:elevation="4dp"
        android:minHeight="120dp"
        android:padding="28dp"
        android:stateListAnimator="@null"
        android:text="@string/btn_speech_analysis"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btnVowelPhonation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iconMain"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnVowelPhonation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#2196F3"
        android:elevation="4dp"
        android:minHeight="120dp"
        android:padding="28dp"
        android:stateListAnimator="@null"
        android:text="@string/btn_vowel_phonation_with_warning"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btnSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSpeechAnalysis" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="@string/btn_settings"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#757575"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toTopOf="@id/btnAbout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="@string/btn_about"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#757575"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>